{
  "@type": "@builder.io/mitosis/component",
  "name": "TodoList",
  "state": {
    "todos": []
  },
  "nodes": [
    {
      "name": "div",
      "attributes": {
        "class": "space-y-4"
      },
      "children": [
        {
          "name": "Heading",
          "attributes": {
            "level": 2
          },
          "children": [
            {
              "name": "text",
              "bindings": {
                "text": "'Your Todos'"
              }
            }
          ]
        },
        {
          "name": "List",
          "bindings": {
            "items": "{{state.todos}}"
          },
          "children": [
            {
              "name": "Card",
              "bindings": {
                "key": "{{item.id}}"
              },
              "children": [
                {
                  "name": "div",
                  "attributes": {
                    "class": "flex items-center justify-between"
                  },
                  "children": [
                    {
                      "name": "Text",
                      "attributes": {
                        "class": "font-semibold text-lg text-primary-500"
                      },
                      "bindings": {
                        "text": "{{item.title}}"
                      }
                    },
                    {
                      "name": "span",
                      "attributes": {
                        "class": "px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wide bg-secondary-100 text-secondary-700 border border-secondary-300"
                      },
                      "children": [
                        {
                          "name": "Text",
                          "bindings": {
                            "text": "{{item.completed ? '✓ Completed' : '○ Pending'}}"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}

